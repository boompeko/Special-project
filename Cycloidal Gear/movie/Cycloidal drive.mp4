
clear;
clc;




N = 16 ;%Number of rollers
Rr = 6.5 ;%Radius of the roller
R = 45 ;%Radius of the rollers PCD (Pitch Circle Diamater)
E =1.5 ;% Eccentricity - offset from input shaft to a cycloidal disk

x = (R*cos(t))-(Rr*cos(t+arctan(sin((1-N)*t)/((R/(E*N))-cos((1-N)*t)))))-(E*cos(N*t));
y = (-R*sin(t))+(Rr*sin(t+arctan(sin((1-N)*t)/((R/(E*N))-cos((1-N)*t)))))+(E*sin(N*t));

figure;
plot(x,y,'LineWidth',2);
xlabel('X','fontname','Times New Roman','fontsize',20');
ylabel('Y','fontname','Times New Roman','fontsize',20');
box on;
grid on;